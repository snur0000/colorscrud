<h1>{{viewTitle}}</h1>

<form  action="/skater" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{skater._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{skater.fullName}}">
        <div class="text-danger">
            {{skater.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{skater.email}}">
        <div class="text-danger">
            {{skater.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{skater.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>City</label>
            <input type="text" class="form-control" name="city" placeholder="City" value="{{skater.city}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"></i> Submit</button>
        <a class="btn btn-secondary" href="/skater/list">View All</a>
    </div>
</form>