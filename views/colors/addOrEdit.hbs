<h1>{{viewTitle}}</h1>

<form  action="/colors" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{colors._id}}">
    <div class="form-group">
        <label>Favorite Color:</label>
        <input type="text" class="form-control" name="favColor" placeholder="teal" value="{{colors.favColor}}">
        <div class="text-danger">
            {{colors.favColorError}}</div>
    </div>
   

    <div class="form-group">
        <button type="submit" class="btn btn-info"></i> Submit</button>
        <a class="btn btn-secondary" href="/colors/list">View All</a>
    </div>
</form>